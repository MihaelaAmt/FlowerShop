@model Flower

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Flower"
                   asp-action="Details"
                   asp-route-id="@Model.FlowerId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-flowerId="@Model.FlowerId">Add to cart</a>
            </p>
        </div>
        @if (!Model.IsFavorite)
        {

            <div class="addToFavorite">
                <a class="btn btn-primary" asp-controller="Flower" asp-action="AddToFavorite"
                   asp-route-flowerId="@Model.FlowerId">Add to favorite </a>
            </div>
        }
        else
        {
            <div class="addToFavorite">
                <a class="btn btn-primary" asp-controller="Flower" asp-action="RemoveFromFavorite"
                   asp-route-flowerId="@Model.FlowerId">Remove from favorite </a>
            </div>
        }
    </div>

</div>
