
@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Flower"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Flower<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Flower" asp-action="List"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Flower" asp-action="List" asp-route-Category="">View all flowers</a>
            <a asp-controller="Flower" asp-action="Favorite" asp-route-Category="">View favorite flowers</a>
        </li>
    </ul>
</li>
